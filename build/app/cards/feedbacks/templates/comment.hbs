  <div class="comment-container">
    {{>js_views_card_partials_loading}}
    {{>js_views_card_partials_fetchError}}
    {{#if acceptionFailed}}
      <div class="approve-failed error overlay with-button">
        <div class="overlay-inner">
          <span class="message overlay-content">
            <span class="message-inner overlay-content-inner">{{error.message}}</span>
          </span>
          <div class="button-container">
            <div class="close-me button">{{#trans trans}}Close{{/trans}}</div>
          </div>
        </div>
      </div>
    {{/if}}
    {{#if status}}
      {{#ifIs status eq="Pending"}}
        {{#if commentApprovePerm}}
        <div id="approve" class="button-container button-container-caution button-container-top">
          <div class="button">
            <div class="button-inner">{{#trans trans}}Approve{{/trans}}</div>
          </div>
        </div>
        {{/if}}
        {{>cards_feedbacks_templates_content}}
      {{else}}
        {{#ifIs status eq="Approved"}}
        <div class="button-container button-container-undo button-container-top">
          <span class="button-icon icon-check"></span>
          <span id="accepted" class="button-label">
            {{#if accepted}}
              {{#trans trans}}Completed Approvement{{/trans}}
            {{else}}
              {{#trans trans}}Approved{{/trans}}
            {{/if}}
          {{#if commentApprovePerm}}
          <span id="comment-undo" class="button-undo">
            <span class="button-undo-inner icon-undo-arrow"></span>
          </span>
          {{/if}}
        </div>
        {{>cards_feedbacks_templates_content}}
        {{/ifIs}}
      {{/ifIs}}
    {{/if}}
  </div>
