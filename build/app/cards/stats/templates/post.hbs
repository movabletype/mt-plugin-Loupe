<section id="stats-post" class="card">
  <div class="content">
  {{>js_views_card_partials_loading}}
  {{#if id}}
    {{#ifIs status eq="Publish"}}
    <div class="pageviews">
      <span class="label">{{#trans trans}}{{label}}{{/trans}}</span>
      <span class="pageview">{{pageviews}}</span>
    </div>
    <div class="title">{{title}}</div>
    <div class="date">{{formatDate date lang}}</div>
    <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{author.displayName}}</span></div>
    <div class="body">{{sanitize body}}</div>
    {{/ifIs}}
  {{else}}
    {{#if error}}
      <div class="error-message">
        {{#trans trans}}Failed fetching the post data{{/trans}}
      </div>
    {{/if}}
  {{/if}}
  </div>
</section>
