<div id="login">
  <header>
    <h1>
      Sign In
    </h1>
  </header>
  <div class="card">
    <form class="login-form">
      <div class="content">
        {{#if loginError}}
        <div class="login-error overlay with-button">
          <div class="overlay-inner">
            <div class="overlay-content message">
              <div class="overlay-content-inner message-inner">{{loginError}}</div>
            </div>
            <div class="button-container">
              <div class="close-me button">Close</div>
            </div>
          </div>
        </div>
        {{/if}}

        <div class="login-field">
          <label for="username" class="login-label">Username</label>
          <input type="text" id="username" value="{{username}}" class="login-input" />
        </div>
        <div class="login-field">
          <label for="password" class="login-label">Password</label>
          <input type="password" id="password" value="{{password}}" class="login-input" />
        </div>
        <input type="hidden" name="remember" id="remember" value="1">
        <div class="button-container">
          <div id="sign-in-button" class="button">Sign In</div>
        </div>
      </div>
    </form>
  </div>
</div>
