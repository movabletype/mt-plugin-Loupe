<section id="acception-view" class="card">
  <div class="content">
  {{#if perm}}
    {{>js_views_card_partials_loading}}
    {{#if acceptionFailed}}
        <div class="acception-failed error"><span class="message"><span class="message-inner">{{#trans trans}}{{error}}{{/trans}}</span></span><div class="close-me button">{{#trans trans}}Close{{/trans}}</div></div>
    {{/if}}
      {{#if fetchError}}
       <div class="error">
        <span class="message"><span class="message-inner">{{#trans trans}}Failed Fetching Data{{/trans}}</span></span>
        </div>
       {{/if}}
    {{#if id}}
      {{#ifIs status eq="Review"}}
        <div id="accept-button" class="contents-top-button button">{{#trans trans}}Accept{{/trans}}</div>
        <div class="title">{{title}}</div>
        <div class="date">{{formatDate date lang}}</div>
        <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{author.displayName}}</span></div>
        <div class="body">{{sanitize body}}</div>
      {{else}}
        {{#ifIs status eq="Publish"}}
        <div id="published-button" class="ok contents-top-button button button-with-undo">
          <span class="button-icon icon-check"></span>
          <span id="accepted" class="button-label">
            {{#if accepted}}
              {{#trans trans}}Published!{{/trans}}
            {{else}}
              {{#trans trans}}Published{{/trans}}
            {{/if}}
            <span id="accept-undo" class="button-undo"><span class="button-undo-inner icon-undo-arrow"></span></span>
          </span>
        </div>
        <div class="title">{{title}}</div>
        <div class="date">{{formatDate date lang}}</div>
        <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{author.displayName}}</span></div>
        <div class="body">{{sanitize body}}</div>
        {{/ifIs}}
      {{/ifIs}}
    {{/if}}
  {{else}}
    <div class="error"><span class="message"><span class="message-inner">
    {{#trans trans}}User has no permission for this card{{/trans}}
    </span></span></div>
  {{/if}}
  </div>
</section>
