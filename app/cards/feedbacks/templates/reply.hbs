{{#if replied}}
<div id="reply-container">
  <div class="reply-button-container">
    <div id="reply-button" class="button">{{#trans trans}}Another comment{{/trans}}</div>
  </div>
</div>
<div id="reply-textarea-container">
  <div id="reply-complete" class="ok contents-top-button button">
    <span class="button-icon icon-checkmark-circle"></span>
    <span id="accepted" class="button-label">{{#trans trans}}Posted comment successfully{{/trans}}</span>
  </div>
  <div>{{body}}</div>
</div>
{{else}}
<div id="reply-container">
  <div class="reply-button-container">
    <div id="reply-disabled-button" class="button button-disabled">{{#trans trans}}Reply{{/trans}}</div>
  </div>
</div>
<div id="reply-textarea-container">
  <textarea id="reply-textarea"></textarea>
  <div id="do-reply-button" class="contents-top-button button">{{#trans trans}}Reply{{/trans}}</div>
</div>
{{/if}}
