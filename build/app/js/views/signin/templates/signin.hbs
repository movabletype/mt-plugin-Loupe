<div id="signin">
  <header>
    <h1>
      Sign In
    </h1>
  </header>
  <div class="card">
    <form class="signin-form">
      <div class="content">
        {{#if signinError}}
        <div class="signin-error overlay with-button">
          <div class="overlay-inner">
            <div class="overlay-content message">
              <div class="overlay-content-inner message-inner">{{signinError}}</div>
            </div>
            <div class="button-container">
              <div class="close-me button">Close</div>
            </div>
          </div>
        </div>
        {{/if}}

        <div class="signin-field">
          <label for="username" class="signin-label">{{#trans trans}}Username{{/trans}}</label>
          <input type="text" id="username" value="{{username}}" class="signin-input" />
        </div>
        <div class="signin-field">
          <label for="password" class="signin-label">{{#trans trans}}Password{{/trans}}</label>
          <input type="password" id="password" value="{{password}}" class="signin-input" />
        </div>
        <input type="hidden" name="remember" id="remember" value="1">
        <div class="button-container">
          <div id="signin-button" class="button">{{#trans trans}}Sign In{{/trans}}</div>
        </div>
      </div>
    </form>
  </div>
</div>
