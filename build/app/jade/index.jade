//if lt IE 8
  html
//if IE 8
  html(class="ie8")
// [if gt IE 8] <!
html(manifest=manifestFile)
  // <![endif]
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=yes')
    meta(name='format-detection', content='telephone=no,email=no,address=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='msapplication-tap-highlight', content='no')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href!='#{libPath}/assets/images/apple-touch-icon.png')
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href!='#{libPath}/assets/images/apple-touch-icon.png')

    title Loupe

    link(rel='stylesheet', href!='#{libPath}/assets/font/League-Gothic-fontfacekit/stylesheet.css')
    link(rel='stylesheet', href!='#{libPath}/assets/icons/style.css')

    if dev
      each val in csses
        link(rel='stylesheet', href!='#{libPath}/#{val}')
    else
      link(rel='stylesheet', href!='#{libPath}/css/style.css')

    if dev
      script(src!='#{mtApiPath}/mt-data-api.js')
    else
      script(src!='#{mtApiPath}/mt-data-api.min.js')

    //if lte IE 8
      script(src!='#{libPath}/ie/console-polyfill/index.js')
      script(src!='#{libPath}/ie/html5shiv/html5shiv')
      script(src!='#{libPath}/ie/selectivizr/selectivizr-min.js')
      script(src!='#{libPath}/ie/PIE/PIE_IE678.js')

    if dev
      script#main-script(data-mtapi!='#{mtApiCGIPath}', data-base!='#{libPath}', src!='#{libPath}/lib/require.js')
      script(src!='#{libPath}/js/main.js')
      // card plugins
      each path in cards
        script(src!='#{libPath}/cards/#{path}/card.js')
    else
      script(src!='#{libPath}/js/init.js')
      script#main-script(data-mtapi!='#{mtApiCGIPath}', data-base!='#{libPath}', src!='#{libPath}/js/basket.js')
      each path in cards
        script(src!='./cards/#{path}/card.js')
  body
    #container
      #menu
      #app
    #app-building.loading
