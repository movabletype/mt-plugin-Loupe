<a data-route="acception/{{blog.id}}/{{this.id}}">
  <span class="item-content">
    <span class="item-asset-container">
    {{#if this.assets.length}}
      {{#eachOnly this.assets 0}}
      <span class="item-asset image circle" style="background-image:url({{url}}); -pie-background: url({{url}}) no-repeat center center / cover"><span class="circle-inner"></span></span>
      {{/eachOnly}}
    {{else}}
      <span class="item-asset no-image circle"><span class="circle-inner"></span></span>
    {{/if}}
    </span>
    <span class="item-title">{{title}}</span>
    <span class="item-arrow icon-arrow"></span>
  </span>
</a>
