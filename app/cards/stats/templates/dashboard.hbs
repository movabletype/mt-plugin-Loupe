{{>js_views_card_partials_title}}
<div class="content">
  {{>js_views_card_partials_loading}}
  {{#if today}}<div class="today">{{formatDate today lang}}</div>{{/if}}

  {{>js_views_card_partials_fetchError}}
  {{>js_views_card_partials_providerIsNotAvailable}}

  <div class="stats-dashboard-graph-container">
    {{#if pageviews}}
    {{#if pageviews.items}}
    <div class="todays-pageviews">{{todaysPageViews pageviews.items}}
      <span class="diff-icon {{diffIcon}}"></span>
    </div>
    {{/if}}
    {{/if}}
    <div id="stats-dashboard-graph"></div>
  </div>
</div>
