{{#if loading}}
<div class="loading"></div>
{{/if}}
{{#if trans}}
<header>
<h1>{{#trans trans}}Today's page views{{/trans}}</h1>
</header>
{{/if}}
{{#if error}}
<div class="error">
  <div class="message">{{#trans trans}}Failed fetching data{{/trans}}</div>
  <div class="refetch">{{#trans trans}}re-fetch data{{/trans}}</div>
</div>
{{/if}}
{{#if providerIsNotAvailable}}
<div class="error">
  <div class="message provider-is-not-available">{{#trans trans}}Analytics service does not enabled{{/trans}}</div>
</div>
{{/if}}
{{#if today}}<div class="today">{{formatDate today lang}}</div>{{/if}}
<div class="stats-dashboard-graph-container">
  {{#if pageviews.items}}
  <div class="todays-pageviews">{{todaysPageViews pageviews.items}}<span class="diff-icon {{diffIcon}}"></span></div>
  {{/if}}
  <div id="stats-dashboard-graph"></div>
</div>
