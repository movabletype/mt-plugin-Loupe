<section id="feedbacks-comment-view" class="card">
  <div class="content">
    <div class="comment-container">
    {{>js_views_card_partials_loading}}
    {{#if acceptionFailed}}
      <div class="acception-failed error"><span class="message"><span class="message-inner">{{#trans trans}}Acception failed{{/trans}}</span></span><div class="close-me button">{{#trans trans}}close{{/trans}}</div></div>
    {{/if}}
    {{#if fetchError}}
      <div class="error">
      <span class="message"><span class="message-inner">{{#trans trans}}Failed fetching data{{/trans}}</span></span>
      </div>
    {{/if}}
    {{#if id}}
      {{#ifIs status eq="Pending"}}
        <div id="accept-button" class="contents-top-button button">{{#trans trans}}Approve{{/trans}}</div>
        {{>cards_feedbacks_templates_comment}}
      {{else}}
        {{#ifIs status eq="Approved"}}
        <div class="ok contents-top-button button button-with-undo">
          <span class="button-icon icon-checkmark-circle"></span>
          <span id="accepted" class="button-label">
            {{#if accepted}}
              {{#trans trans}}Published!{{/trans}}
            {{else}}
              {{#trans trans}}Published{{/trans}}
            {{/if}}
          <span class="button-undo"><span class="button-undo-inner icon-undo"></span></span>
          </span>
        </div>
        {{>cards_feedbacks_templates_comment}}
      </div>
      <div id="reply-container">
        <div class="reply-button-container">
          <div id="reply-button" class="button">{{#trans trans}}Reply{{/trans}}</div>
        </div>
      </div>
      {{/ifIs}}
    {{/ifIs}}
  {{/if}}
  </div>
</section>
<section id="feedbacks-comment-entry" class="card">
  <header>
  <h1 id="feedbacks-label">{{#trans trans}}The post commented{{/trans}}</h1>
  </header>

  {{#if entryLoading}}
  <div class="loading"></div>
  {{/if}}
  {{#if entryError}}
  <div class="error">
    <span class="message"><span class="message-inner">{{#trans trans}}Failed fetching data{{/trans}}</span></span>
  </div>
  {{/if}}
  {{#if entry.fetched}}
    <div class="content">
    {{#ifIs entry.status eq="Publish"}}
      <div class="title">{{entry.title}}</div>
      <div class="date">{{formatDate entry.date lang}}</div>
      <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{entry.author.displayName}}</span></div>
      <div class="body">{{sanitize entry.body}}</div>
    {{else}}
      <div class="message">{{#trans trans}}The post is not published{{/trans}}</div>
    {{/ifIs}}
    </div>
  {{/if}}
</section>
