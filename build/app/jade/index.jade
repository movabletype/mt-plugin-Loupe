doctype 5
html(manifest=manifestFile)
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=yes')
    meta(name='format-detection', content='telephone=no,email=no,address=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    title Loupe
    link(rel='stylesheet', href='#{libPath}/assets/font/League-Gothic-fontfacekit/stylesheet.css')
    link(rel='stylesheet', href='#{libPath}/assets/icons/style.css')
    link(rel='stylesheet', href='#{libPath}/css/style.css')

    if dev
      script(src='#{mtApiPath}/app.js')
      script(src='#{mtApiPath}/endpoints.js')
    else
      script(src='#{mtApiPath}/all.js')

    //if lte IE 8
      script(src='#{libPath}/ie/console-polyfill/index.js')
      script(src='#{libPath}/ie/html5shiv/html5shiv')
      script(src='#{libPath}/ie/selectivizr/selectivizr-min.js')
      script(src='#{libPath}/ie/PIE/PIE_IE678_uncompressed.js')


    if dev
      script#main-script(data-mtapi='#{mtApiCGIPath}', data-base='#{libPath}', data-main='#{libPath}/js/main', src='#{libPath}/lib/require.js')
    else
      script(src='#{libPath}/js/vendor.js')
      script(src='#{libPath}/js/template.js')
      script(src='#{libPath}/js/card.js')
      script#main-script(data-mtapi='#{mtApiCGIPath}', data-base='#{libPath}', src='#{libPath}/js/app.js')
  body
    #container
      #menu
      #app
    #app-building
