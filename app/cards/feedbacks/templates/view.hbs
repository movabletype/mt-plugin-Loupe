<section id="feedbacks-comment-view">
  <div class="content">
    <div class="comment-container">
    {{>js_views_card_partials_loading}}
    {{#if acceptionFailed}}
      <div class="acception-failed"><span class="message">承認に失敗しました</span><div class="close-me">閉じる</div></div>
    {{/if}}
    {{#if id}}
      {{#ifIs status eq="Pending"}}
        <div id="accept-button" class="contents-top-button">承認する</div>
        {{>cards_feedbacks_templates_comment}}
      {{else}}
        {{#ifIs status eq="Approved"}}
        <div class="accepted contents-top-button">
          <div id="accepted">
            {{#if accepted}}
              {{#trans trans}}Published!{{/trans}}
            {{else}}
              {{#trans trans}}Published{{/trans}}
            {{/if}}
            <span class="accepted-view-button-container"><span class="accepted-view-button icon-undo"></span></span>
          </div>
        </div>
        {{>cards_feedbacks_templates_comment}}
      </div>
      <div id="reply-container">
        <div class="reply-button-container">
          <div id="reply-button" class="contents-top-button">返信する</div>
        </div>
      </div>
      {{/ifIs}}
    {{/ifIs}}
  {{else}}
    {{#if error}}
    <div class="comment-container">
      <div class="error-message">
        コメントの情報を取得できませんでした。
      </div>
    </div>
    {{/if}}
  {{/if}}
  </div>
</section>
<section id="feedbacks-comment-entry" class="card">
  <header>
  <h1 id="feedbacks-label">{{#trans trans}}The post commented{{/trans}}</h1>
  </header>

  {{#if entryLoading}}
  <div class="loading"></div>
  {{/if}}
  {{#if entryError}}
  <div class="error">
    <div class="message">{{#trans trans}}Failed fetching data{{/trans}}</div>
    <div class="refetch">{{#trans trans}}re-fetch data{{/trans}}</div>
  </div>
  {{/if}}
  {{#if entry.fetched}}
    <div class="content">
    {{#ifIs entry.status eq="Publish"}}
      <div class="title">{{entry.title}}</div>
      <div class="date">{{formatDate entry.date lang}}</div>
      <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{entry.author.displayName}}</span></div>
      <div class="body">{{sanitize entry.body}}</div>
    {{else}}
      <div class="message">{{#trans trans}}The post is not published{{/trans}}</div>
    {{/ifIs}}
    </div>
  {{/if}}
</section>
