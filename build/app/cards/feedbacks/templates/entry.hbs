<header>
<h1>{{#trans trans}}The comment posted{{/trans}}</h1>
</header>
  <div class="content">
    {{>js_views_card_partials_fetchError}}
    {{>js_views_card_partials_loading}}
    {{#if id}}
    {{#ifIs status eq="Publish"}}
      <div class="title">{{title}}</div>
      <div class="date">{{formatDate date lang}}</div>
      <div class="author">{{#trans trans}}Author{{/trans}}<span class="author-name">{{author.displayName}}</span></div>
      <div class="body">{{sanitize body}}</div>
    {{else}}
      <div class="message">{{#trans trans}}The post is not published{{/trans}}</div>
    {{/ifIs}}
    {{/if}}
  </div>
