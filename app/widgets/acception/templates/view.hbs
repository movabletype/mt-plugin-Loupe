<section id="acception-view">
  <div class="inner">
    <header><h1>承認待ちの記事</h1></header>
    <div class="content">
    {{#if loading}}
      <div class="loading"></div>
    {{else}}
      <ul id="acception-item">
        <li>
          {{#if assets.length}}
            {{#eachOnly assets 0}}
              <img src="{{url}}" />
            {{/eachOnly}}
          {{else}}
              <span class="no-image"></span>
          {{/if}}
        </li>
      </ul>
      <div class="title">{{title}}</div>
      <input type="button" value="承認する" class="accept-button">
    {{/if}}
    </div>
  </div>
</section>
