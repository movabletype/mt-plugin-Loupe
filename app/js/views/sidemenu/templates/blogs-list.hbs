<div class="histories">
  {{#if historiesLoading}}
  <div class="loading"></div>
  {{/if}}
  {{#if histories.length}}
    <ul class="histories-list">
    {{#each histories}}
      <li data-id="{{id}}" class="blog-item{{#if this.selected}} selected{{/if}}">
        <a href="#" data-id="{{id}}">
          <span class="circle blog-asset"><span class="circle-inner"></span></span>
          <span class="blog-name">{{this.name}}</span>
        </a>
      </li>
    {{/each}}
    </ul>
  {{/if}}
</div>
<div class="blogs">
  {{#if blogsLoading}}
  <div class="loading"></div>
  {{/if}}
  <ul>
  {{#each blogs}}
    <li data-id="{{id}}" class="blog-item{{#if this.selected}} selected{{/if}}">
      <a href="#" data-id="{{id}}">
        <span class="circle blog-asset"><span class="circle-inner"></span></span>
        <span class="blog-name">{{this.name}}</span>
      </a>
    </li>
  {{/each}}
    <li class="user-info">
      {{#if user}}
      {{#with user}}
      <a href="#">
        {{#if this.userpicURL}}
          <div class="circle userpic" style="background-image: url({{userpicURL}}); -pie-background: url({{userpicURL}}) no-repeat center center / cover"></div>
        {{else}}
          <div class="userpic no-image icon-user"></div>
        {{/if}}
        <div class="display-name">{{#trans ../trans}}settings{{/trans}}</div>
      </a>
      {{/with}}
      {{/if}}
    </li>
  </ul>
</div>
<div class="blog-item-nav-container">
{{#ifIs prev exists=true}}
  <div class="blog-item-nav blog-item-nav-prev" data-offset="{{prev}}"><span class="icon-arrow-left"></span>前の25件</div>
{{/ifIs}}
{{#ifIs totalResults gt=next}}
  <div class="blog-item-nav blog-item-nav-next" data-offset="{{next}}">次の25件<span class="icon-arrow-right"></span></div>
{{/ifIs}}
</div>
