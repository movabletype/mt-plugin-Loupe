<div class="histories">
  {{#if histories.length}}
    <ul class="histories-list">
    {{#if historiesLoading}}
      <li class="blog-item loading"></li>
    {{/if}}
    {{#each histories}}
      <li data-id="{{id}}" class="blog-item{{#if this.selected}} selected{{/if}}">
        <a href="#" data-id="{{id}}">
          <span class="circle blog-asset"><span class="circle-inner"></span></span>
          <span class="blog-name">{{this.name}}</span>
        </a>
      </li>
    {{/each}}
    </ul>
  {{/if}}
</div>
<div class="blogs">
  <ul>
  {{#if blogsLoading}}
    <li class="blog-item loading"></li>
  {{/if}}
  {{#if error}}
    <li class="blog-item error">
      {{error.message}}
    </li>
  {{/if}}
  {{#each blogs}}
    <li data-id="{{id}}" class="blog-item{{#if this.selected}} selected{{/if}}">
      <a href="#" data-id="{{id}}">
        <span class="circle blog-asset"><span class="circle-inner"></span></span>
        <span class="blog-name">{{this.name}}</span>
      </a>
    </li>
  {{/each}}
    <li class="user-info">
      {{#if user}}
      {{#with user}}
      <a href="#" data-id="logout">
        {{#if this.userpicUrl}}
          <div class="circle userpic" style="background-image: url({{userpicUrl}}); -pie-background: url({{userpicUrl}}) no-repeat center center / cover"></div>
        {{else}}
          <div class="userpic no-image icon-user"></div>
        {{/if}}
        <div class="display-name">{{#trans ../trans}}Logout{{/trans}}</div>
      </a>
      {{/with}}
      {{/if}}
    </li>
  </ul>
</div>
<div class="blog-item-nav-container">
{{#ifIs prev notNull=true}}
  <div class="blog-item-nav blog-item-nav-prev" data-offset="{{prev}}">
    <span class="blog-item-nav-icon icon-arrow-left"></span>
    <span class="blog-item-nav-label">{{#trans trans}}previous{{/trans}}</span>
  </div>
{{/ifIs}}
{{#ifIs totalResults gt=next}}
  <div class="blog-item-nav blog-item-nav-next" data-offset="{{next}}">
    <span class="blog-item-nav-label">{{#trans trans}}next{{/trans}}</span>
    <span class="blog-item-nav-icon icon-arrow"></span>
  </div>
{{/ifIs}}
</div>
